---
import List from '../components/list.astro'
import { getChannelInfo } from '../lib/telegram'
import Header from '../components/Header.astro'
import Footer from '../components/Footer.astro'
import channelCover from '../assets/channel-cover.jpg'

const channel = await getChannelInfo(Astro)
---

<style is:global>
  :root {
    --primary: #0088cc;
    --primary-light: #e6f4ff;
    --text: #1c1e21;
    --text-light: #65676b;
    --bg: #ffffff;
    --border: #dddfe2;
    --radius: 12px;
    --shadow: 0 4px 12px rgba(0, 0, 0, 0.05);
  }

  body {
    font-family: 'Inter', -apple-system, BlinkMacSystemFont, sans-serif;
    color: var(--text);
    background: var(--bg);
    line-height: 1.5;
    margin: 0;
    padding: 0;
  }

  .container {
    max-width: 800px;
    margin: 0 auto;
    padding: 0 20px;
  }

  .channel-header {
    position: relative;
    margin-bottom: 2rem;
    border-radius: var(--radius);
    overflow: hidden;
    box-shadow: var(--shadow);
  }

  .channel-cover {
    width: 100%;
    height: 200px;
    object-fit: cover;
  }

  .channel-info {
    padding: 1.5rem;
    background: white;
  }

  .channel-title {
    margin: 0;
    font-size: 1.75rem;
    font-weight: 700;
  }

  .channel-description {
    color: var(--text-light);
    margin: 0.5rem 0 0;
  }

  .channel-stats {
    display: flex;
    gap: 1.5rem;
    margin-top: 1rem;
    color: var(--text-light);
    font-size: 0.9rem;
  }

  .stat {
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }

  .stat svg {
    width: 16px;
    height: 16px;
  }

  @media (max-width: 768px) {
    .channel-cover {
      height: 150px;
    }
    
    .channel-title {
      font-size: 1.5rem;
    }
  }
</style>

<Header />

<main class="container">
  <div class="channel-header">
    <img 
      src={channel.coverPhoto || channelCover.src} 
      alt={`${channel.title} cover`} 
      class="channel-cover"
      width="800"
      height="200"
      loading="eager"
    />
    <div class="channel-info">
      <h1 class="channel-title">{channel.title}</h1>
      {channel.description && 
        <p class="channel-description">{channel.description}</p>
      }
      <div class="channel-stats">
        <div class="stat">
          <svg viewBox="0 0 24 24" fill="currentColor">
            <path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm0 3c1.66 0 3 1.34 3 3s-1.34 3-3 3-3-1.34-3-3 1.34-3 3-3zm0 14.2c-2.5 0-4.71-1.28-6-3.22.03-1.99 4-3.08 6-3.08 1.99 0 5.97 1.09 6 3.08-1.29 1.94-3.5 3.22-6 3.22z"/>
          </svg>
          <span>{channel.membersCount?.toLocaleString() || '0'} members</span>
        </div>
        <div class="stat">
          <svg viewBox="0 0 24 24" fill="currentColor">
            <path d="M21.99 8c0-.72-.37-1.35-.94-1.7L12 1 2.95 6.3C2.38 6.65 2 7.28 2 8v10c0 1.1.9 2 2 2h16c1.1 0 2-.9 2-2l-.01-10zM12 13L3.74 7.84 12 3l8.26 4.84L12 13z"/>
          </svg>
          <span>{channel.postsCount?.toLocaleString() || '0'} posts</span>
        </div>
      </div>
    </div>
  </div>

  <List channel={channel} after={false} />
</main>

<Footer />
